{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["api/controllers/*"],
            "@models/*": ["api/models/*"],
            // "@api/*": ["api/*"],
            "@constants/*": ["api/constants/*"],
            "@fixtures/*": ["api/fixtures/*"]
        },
        "types": ["node", "@playwright/test"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["api/**/*.ts", 
                "api/*.ts",
                "tests/*.ts",
                "tests/**/*.ts"
            ]
}